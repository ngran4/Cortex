<%- include('../partials/header')  %> 

<div class="container">
  <br>
  <div class="row justify-content-md-center">
      <h1 id="main-title">habits</h1>
  </div>
  
  <br>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Habit</th>
          <th scope="col">Streak</th>
        </tr>
      </thead>
      <tbody>
        <% habits.forEach(h => { %> 
          <tr>
            <td scope="row"><a href="/habits/<%= h._id %>"><%= h.habit %></a></td>
            <td scope="row"><%= h.streak %> </td>
          </tr>
        <% }); %> 
      </tbody>
    </table>
  </div>
</div>

<%- include('../partials/footer')  %> 