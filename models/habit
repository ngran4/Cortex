const mongoose = require('mongoose');

const habitLogSchema = new mongoose.Schema({
    date: Date,
    complete: Boolean,
    note: String
});

const habitSchema = new mongoose.Schema({
    habit: {
        type: String,
        required: true
    },
    category: {
        type: String,
        required: true
    },
    streak: Integer,
    habitLog: [habitLogSchema],
});


module.exports =  mongoose.model('Habit', habitSchema);